<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Tmp.Views.AboutPagina"
            NavigationPage.HasBackButton="True"
            BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Icon="usericon.png">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

                    <Image Source="xamarin_logo" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                    </Image>
                    <Label Text="Acerca de"  HorizontalOptions="Center" VerticalOptions="CenterAndExpand" FontSize="14" TextColor="Gray" XAlign="Center" />
                    <Label x:Name="version" Text="" Margin="30"  HorizontalOptions="Center" VerticalOptions="CenterAndExpand" FontSize="16" TextColor="Black" />
                    <Label Text="© 2018 Innermap, Inc."  HorizontalOptions="Center" VerticalOptions="End" FontSize="12" TextColor="Gray" />
                </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>